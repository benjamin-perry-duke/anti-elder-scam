{
    "manifest_version": 3,
    "name": "Fraud Highlighter",
    "version": "1.0",
    "description": "Highlights text that may contain fraud.",
    "permissions": ["activeTab"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }