{
  "manifest_version": 3,
  "name": "Fraud Highlighter",
  "version": "1.0",
  "description": "Highlights text that may contain fraud.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}